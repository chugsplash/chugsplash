{
  "name": "@sphinx-labs/contracts",
  "version": "0.13.3",
  "description": "Sphinx contracts",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/*",
    "contracts/*",
    "artifacts/contracts/**/*.json",
    "artifacts/@openzeppelin/contracts/token/ERC20/ERC20.sol/*.json",
    "artifacts/build-info/**/*.json"
  ],
  "scripts": {
    "build": "forge clean && forge build --contracts contracts/core --skip test --skip script && yarn write-constants && forge build && yarn build:ts",
    "write-constants": "npx ts-node scripts/write-constants.ts > contracts/foundry/SphinxConstants.sol",
    "build:ts": "tsc -p ./tsconfig.json",
    "clean": "rimraf dist/ ./tsconfig.tsbuildinfo out/",
    "test:coverage": "yarn test",
    "test": "forge test",
    "slither": "./scripts/slither.sh",
    "lint": "yarn lint:fix && yarn lint:check",
    "lint:check": "yarn lint:contracts:check && yarn lint:ts:check",
    "lint:fix": "yarn lint:contracts:fix && yarn lint:ts:fix",
    "lint:ts:check": "eslint .",
    "lint:ts:fix": "yarn lint:ts:check --fix",
    "lint:contracts:check": "yarn solhint -f table 'contracts/**/*.sol' && yarn prettier --check 'contracts/**/*.sol'",
    "lint:contracts:fix": "yarn prettier --write '{contracts,test}/**/*.sol' && yarn solhint --fix '{contracts,test}/**/*.sol'",
    "pre-commit": "lint-staged"
  },
  "homepage": "https://github.com/sphinx-labs/sphinx/tree/main/packages/contracts#readme",
  "license": "MIT",
  "author": "Kelvin Fichter",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartcontracts/sphinx.git"
  },
  "devDependencies": {
    "@connext/interfaces": "^2.0.5",
    "@gnosis.pm/safe-contracts": "^1.3.0",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/merkle-tree": "1.0.5",
    "dotenv": "^16.0.1",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "sphinx-forge-std": "https://github.com/foundry-rs/forge-std.git#v1.7.1",
    "hardhat": "^2.17.1",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solmate": "^6.7.0"
  },
  "dependencies": {
    "@eth-optimism/contracts": "^0.5.40",
    "ethers": "^6.7.0"
  }
}
